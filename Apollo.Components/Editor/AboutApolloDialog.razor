@using System.Reflection
@using Apollo.Components.Shared

<MudDialog Class="pa-4 glassmorphic" Style="width: 33vw; height: 45dvh;" ContentStyle="overflow:hidden;">
    <DialogContent>
        <MudGrid>
            <MudItem xs="6" Class="pt-0">
                <MudImage ObjectFit="ObjectFit.Contain" Src="../_content/Apollo.Components/apollo-logo.png" Style="margin-left:-6em;width: 20vw;height: 20vw;" />
            </MudItem>
            <MudItem xs="6">
                <MudStack Class="w-100 h-100" Spacing="3" AlignItems="AlignItems.Center" Justify="Justify.Center">
                    <MudText Class="app-header-font" Typo="Typo.h5">Apollo <MudChip T="string" Color="Color.Tertiary" Variant="Variant.Text">Alpha</MudChip></MudText>
                    <MudText Typo="Typo.h6" Class="mud-text-secondary">Code, Compile, Execute.</MudText>
                    <MudText>A C# code editor that runs entirely in your browser. No server required.</MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudStack Row="true" Spacing="4" Class="mud-width-full" AlignItems="AlignItems.Center">
        @*<MudLink Color="Color.Inherit" Typo="Typo.body1" class="gotu-regular mud-text-secondary" Href="https://www.mythetech.com" Target="_blank">Mythetech</MudLink>*@
        <MudText Typo="Typo.body1" class="mud-text-secondary">Version @Version</MudText>
        @*<ApolloIconLinkButton Tooltip="Support" Icon="@Icons.Custom.Brands.Discord" Href="https://discord.gg/gQcBw2eHkM"/>*@
        <MudSpacer/>
        <MudButton Class="rounded" OnClick="Cancel">Close</MudButton>
        <MudButton Class="rounded" Variant="Variant.Text" OnClick="Cancel">Get Started!</MudButton>
        </MudStack>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }
    private void Cancel() => MudDialog.Cancel();

    private string Version => Assembly.GetExecutingAssembly().GetName().Version.ToString();

}