@using Microsoft.FluentUI.AspNetCore.Components
@using KeyCode = Microsoft.FluentUI.AspNetCore.Components.KeyCode

<MudStack Spacing="1" Row>
    @if (Ctrl)
    {
        <KeyCharacter Key="KeyCode.Ctrl"/>
    }
    <KeyCharacter Key="@Key" />
</MudStack>

@code {
    [Parameter]
    public KeyCode Key { get; set; }

    [Parameter] public bool Alt { get; set; } = false;

    [Parameter] public bool Ctrl { get; set; } = false;

    [Parameter] public bool Meta { get; set; } = false;

    [Parameter] public bool Shift { get; set; } = false;
    
}